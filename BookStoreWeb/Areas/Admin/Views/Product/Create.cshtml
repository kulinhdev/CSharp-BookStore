@model Product

@{
    ViewData["Title"] = "Upsert";
}

<h1>Upsert Product</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="Upsert">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name:</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Category:</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ReleaseDate" class="form-label">ReleaseDate:</label>
        <input asp-for="ReleaseDate" class="form-control">
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description:</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-arrow-right-short"></i> Submit</button>
    <a asp-action="Index" class="btn btn-success"><i class="bi bi-arrow-left-short"></i> Back to list</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
