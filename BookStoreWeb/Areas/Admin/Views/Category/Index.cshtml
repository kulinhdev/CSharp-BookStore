@{
    ViewData["Title"] = "Categories";
}

@model IEnumerable<Category>

<div class="single-page">
    <h1 class="display-4">Categories Page</h1>
    <div class="create-btn">
        <a class="btn btn-warning float-end" asp-area="Admin" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-lg"></i> Create New</a>
    </div>

    <div class="text-center">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">NO.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Url</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @i
                            @{
                                i++;
                            }
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Slug</td>
                        <td>@(item.Status ? "Active" : "Deactive")</td>
                        <td>
                            <a class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Category" asp-action="Edit"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Category" asp-action="Delete"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>