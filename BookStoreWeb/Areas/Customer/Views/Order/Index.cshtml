@model IEnumerable<OrderHeader>

@{
    ViewData["Title"] = "My Order";
}

<div class="p-3">
    <h3>My Orders</h3>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>NO.</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @i
                        @{
                            i++;
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.ApplicationUser.Email</td>
                    <td>@item.OrderDate</td>
                    <td>@item.OrderStatus</td>
                    <td>@item.OrderTotal</td>
                    <td width="5%">
                        <a class="btn btn-primary" asp-route-orderId="@item.Id" asp-controller="Order" asp-action="Details"> <i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
