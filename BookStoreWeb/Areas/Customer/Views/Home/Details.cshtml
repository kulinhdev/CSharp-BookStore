@model ShoppingCart

@{
    ViewData["Title"] = "Product Details";
}

<form method="post">
    <input hidden asp-for="@Model.Product.Id" />
    <div class="card  container pt-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Name</h1>
                <p class="text-warning font-weight-bold">Category: @Model.Product.Category.Name</p>
                <p class="text-warning font-weight-bold">Author: @Model.Product.Author.Name</p>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted">Realease Date :  @Model.Product.ReleaseDate</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">Price: <del class="text-danger">@Model.Product.Price.ToString("c")</del> - @Model.Product.SalePrice.ToString("c")</h5>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-2 text-primary"><h4>Quantity:</h4></div>
                            <div class="col-2"><input asp-for="Count" class="form-control" /></div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">Description: @Html.Raw(Model.Product.Description)</p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImagePath" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>